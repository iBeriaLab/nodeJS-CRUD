extends ../layout/layout
block content
    h1 #{title}
    form(method='POST',  action="/users/login")
        .row
            .col-md-6
                .form-group
                    label Username:
                    input.form-control(name="username", type="text")
            .col-md-6
                .form-group
                    label Password:
                    input.form-control(name="password", type="password")
        .row
            .col-md-12
                .form-group
                    input.btn.btn-primary(type="submit", value="Log in")