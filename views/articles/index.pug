extends ../layout/layout
block content
    .row
        div(class='col-md-6')
            h3 #{title}
        div(class='col-md-6')
            if user
                a.btn.btn-primary.pull-right.mt-1(href='/articles/add') Add Article
    .row
        ul.list-group
            each article, i in articles
                li.list-group-item
                    a(href="/articles/"+article._id)= article.title